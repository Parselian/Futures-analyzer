include ../input/input

mixin Widget(isResultNeed)
    .widget__wrap.container
        .widget(id="widget-main")
            .widget__main
                .widget__inputs.widget__col
                    +input('input_m', 'widget__input-wrap', 'start-amount', 'Начальный капитал:', 0, false)
                    +input('input_m', 'widget__input-wrap', 'start-percent-from-amount', 'Изнач. % от капитала:', 0, false)
                    +input('input_m', 'widget__input-wrap', 'steps-amount', 'Кол-во шагов (усреднений):', 0, false)
                    +input('input_m', 'widget__input-wrap', 'profit-in-percent', '% прибыли:', 0, false)
                    +input('input_m', 'widget__input-wrap', 'possibility-to-get-profit', 'Вер-ть получ. профита, %:', 0, false)
                    +input('input_m', 'widget__input-wrap', 'possibility-to-lose-money', 'Вер-ть наступ. дерьма, %:', 0, false)
                if (isResultNeed)
                    .widget__result-wrap.widget__col
                        .widget__result-circle.widget__result-circle_profitable
                            .widget__result-label Рентабельность:
                            .widget__result-percent +4.7%
            .widget__positions
                .widget__positions-couples
                    .widget__positions-couple
                        +input('input_m', 'widget__input-wrap', 'first-position-open-price', 'Цена открытия 1ой позиции:', 0, false)
                        +input('input_m', 'widget__input-wrap', 'position-amount', 'Объём позиции:', 0, false)
                    .widget__positions-couple
                        +input('input_m', 'widget__input-wrap', 'market-price', 'Цена по рынку:', 0, false)
                        +input('input_m', 'widget__input-wrap', 'position-amount-to-extra-buy', 'Объем позиции дозакупки:', 0, false)