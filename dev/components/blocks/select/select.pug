mixin select(selectSize, additionalClasses, id, defaultOptionLable, options, label, isDisabled)
    .select__wrap(class=selectSize class=additionalClasses)
        select(data-id=id disabled=isDisabled).select
            option(value='unset' selected disabled)=defaultOptionLable
            each option in options
                option(value=option.value selected=option.isSelected)=option.text
        label.select__label=label
        svg.select__icon
            use(xlink:href="./assets/images/svg/symbol/sprite.svg#warning")